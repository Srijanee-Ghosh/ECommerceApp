@model ECommerceApp.Models.Customer

@{
    ViewData["Title"] = "Add Customer Details";
}

<form method="post" asp-controller="Admin" asp-action="AddCustomer">
    <div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="CustomerId"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="CustomerId" class="form-control" />
                        <span asp-validation-for="CustomerId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="FullName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="DeliveryAddress"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="DeliveryAddress" class="form-control" />
                        <span asp-validation-for="DeliveryAddress" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="form-group row">

                    <div class="col-4 offset-4">
                        <input type="submit" class="btn btn-info w-100" value="Add" />
                    </div>
                    @if (ViewBag.Message != null)
                    {
                        <a class="nav-link text-black-50 btn-outline-primary font-weight-bolder" style="position: relative; margin:10px;background-color: beige;float: right" asp-controller="Admin" asp-action="GetCustomerDetails">Get Customer Details </a>
                        <script type="text/javascript">
                                      window.onload=function(){
                                          alert("@ViewBag.Message");
                                      };
                        </script>
                    }
                </div>
            </div>
        </div>
    </div>
</form>

